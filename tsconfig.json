{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "newLine": "lf",
    "strict": true,
    "removeComments": true,
    "importHelpers": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "src/**/example*"
  ],
  "compileOnSave": true
}
